<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/nav_back_ground_color"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/popular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="2dp"
                android:layout_marginTop="4dp"
                android:layout_weight="0.50"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/db_tab1_vertical_margin"
                    android:background="#E24242"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/popular" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:background="#E24242" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/db_tab2_vertical_margin"
                    android:background="#CF3D30"
                    android:gravity="center"
                    android:text="Popular"
                    android:textColor="@color/White"
                    android:textStyle="bold"
                    android:typeface="sans" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/special"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="4dp"
                android:layout_marginTop="4dp"
                android:layout_weight="0.50"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/db_tab1_vertical_margin"
                    android:background="#2685D5"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/special" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:background="#2883CA" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/db_tab2_vertical_margin"
                    android:background="#2B83CD"
                    android:gravity="center"
                    android:text="Alam Special"
                    android:textColor="@color/White"
                    android:textStyle="bold"
                    android:typeface="sans" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/snax_veg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="2dp"
                android:layout_marginTop="4dp"
                android:layout_weight="0.50"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/db_tab1_vertical_margin"
                    android:background="#ac6ce9"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/snax_veg" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:background="#ac6ce9" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/db_tab2_vertical_margin"
                    android:background="#8f62e4"
                    android:gravity="center"
                    android:text="Snax IT: Veg."
                    android:textColor="@color/White"
                    android:textStyle="bold"
                    android:typeface="sans" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/snax_non_veg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="4dp"
                android:layout_marginTop="4dp"
                android:layout_weight="0.50"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/db_tab1_vertical_margin"
                    android:background="#607D8B"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/snax_non_veg" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:background="#607D8B" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/db_tab2_vertical_margin"
                    android:background="#607D8B"
                    android:gravity="center"
                    android:text="Snax IT: Non Veg."
                    android:textColor="@color/White"
                    android:textStyle="bold"
                    android:typeface="sans" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/burgers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="2dp"
                android:layout_marginTop="4dp"
                android:layout_weight="0.50"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/db_tab1_vertical_margin"
                    android:background="#a43159"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/burgers" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:background="#a43159" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/db_tab2_vertical_margin"
                    android:background="#873254"
                    android:gravity="center"
                    android:text="Burgers"
                    android:textColor="@color/White"
                    android:textStyle="bold"
                    android:typeface="sans" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/pasta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="4dp"
                android:layout_marginTop="4dp"
                android:layout_weight="0.50"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/db_tab1_vertical_margin"
                    android:background="#009688"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/pasta" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:background="#009688" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/db_tab2_vertical_margin"
                    android:background="#009688"
                    android:gravity="center"
                    android:text="Italian Pastas"
                    android:textColor="@color/White"
                    android:textStyle="bold"
                    android:typeface="sans" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/wraps"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="2dp"
                android:layout_marginTop="4dp"
                android:layout_weight="0.50"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/db_tab1_vertical_margin"
                    android:background="#ef805d"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/wraps" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:background="#ef805d" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/db_tab2_vertical_margin"
                    android:background="#be5838"
                    android:gravity="center"
                    android:text="Alam Grilled Wraps"
                    android:textColor="@color/White"
                    android:textStyle="bold"
                    android:typeface="sans" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/sanwiches"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="4dp"
                android:layout_marginTop="4dp"
                android:layout_weight="0.50"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/db_tab1_vertical_margin"
                    android:background="#d9b958"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/sanwiches" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:background="#d9b958" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/db_tab2_vertical_margin"
                    android:background="#ac884e"
                    android:gravity="center"
                    android:text="Grilled Sanwiches"
                    android:textColor="@color/White"
                    android:textStyle="bold"
                    android:typeface="sans" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/noodles"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="2dp"
                android:layout_marginTop="4dp"
                android:layout_weight="0.50"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/db_tab1_vertical_margin"
                    android:background="#55b7b4"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/noodles" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:background="#55b7b4" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/db_tab2_vertical_margin"
                    android:background="#308785"
                    android:gravity="center"
                    android:text="Noodles"
                    android:textColor="@color/White"
                    android:textStyle="bold"
                    android:typeface="sans" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/combo_veg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="4dp"
                android:layout_marginTop="4dp"
                android:layout_weight="0.50"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/db_tab1_vertical_margin"
                    android:background="#655aba"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/combo_veg" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:background="#655aba" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/db_tab2_vertical_margin"
                    android:background="#655aba"
                    android:gravity="center"
                    android:text="Combo: Veg."
                    android:textColor="@color/White"
                    android:textStyle="bold"
                    android:typeface="sans" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/combo_non_veg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="2dp"
                android:layout_marginTop="4dp"
                android:layout_weight="0.50"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/db_tab1_vertical_margin"
                    android:background="#7aa8dc"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/combo_non_veg" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:background="#7aa8dc" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/db_tab2_vertical_margin"
                    android:background="#5a7ca3"
                    android:gravity="center"
                    android:text="Combo: Non-Veg."
                    android:textColor="@color/White"
                    android:textStyle="bold"
                    android:typeface="sans" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/milk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="4dp"
                android:layout_marginTop="4dp"
                android:layout_weight="0.50"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/db_tab1_vertical_margin"
                    android:background="#ce3ecb"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/milk" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:background="#ce3ecb" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/db_tab2_vertical_margin"
                    android:background="#8e288c"
                    android:gravity="center"
                    android:text="Milkshakes"
                    android:textColor="@color/White"
                    android:textStyle="bold"
                    android:typeface="sans" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="50dp">

            <LinearLayout
                android:id="@+id/mock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="2dp"
                android:layout_marginTop="4dp"
                android:layout_weight="0.50"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/db_tab1_vertical_margin"
                    android:background="#E24242"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/mocktails" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:background="#E24242" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/db_tab2_vertical_margin"
                    android:background="#CF3D30"
                    android:gravity="center"
                    android:text="Mocktails"
                    android:textColor="@color/White"
                    android:textStyle="bold"
                    android:typeface="sans" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/beverages"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="4dp"
                android:layout_marginTop="4dp"
                android:layout_weight="0.50"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/db_tab1_vertical_margin"
                    android:background="#8d9441"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/beverages" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:background="#8d9441" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/db_tab2_vertical_margin"
                    android:background="#8b8e39"
                    android:gravity="center"
                    android:text="Beverages"
                    android:textColor="@color/White"
                    android:textStyle="bold"
                    android:typeface="sans" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</ScrollView>
